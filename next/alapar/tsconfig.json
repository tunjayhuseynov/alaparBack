{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "components/*",
      ],
      "context/*": [
        "context/*"
      ],
      "fb/*": ["firebase/*"]
    },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "context/**/*",
    "hooks/**/*",
    "inputs/**/*",
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.js",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.js",
    "components/**/*.tsx",
    "babel.config.js",
    "pages/[pagename]/edit/[id].jsx",
    "pages/[pagename]/add/index.jsxx",
    "pages/profile/chat.jsx",
    "pages/[pagename]/add/index.js",
    "pages/business.tsx",
    "pages/profile/business/index.jsx", "pages/[pagename]/index.jsx", "pages/[pagename]/search.jsx", "components/Layouts/header.jsx", "pages/[pagename]/search.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}